# better_prompt_generator.py

class BetterPromptGenerator:
    def __init__(self):
        self.follow_up_questions = [
            "What specific outcome are you hoping to achieve?",
            "Can you provide more context or details?",
            "What format do you want the response in?",
            "Are there any constraints or limitations I should consider?",
            "Who is the intended audience for this prompt?"
        ]

    def generate_follow_ups(self, user_prompt):
        # Generate follow-up questions based on the user prompt
        print(f"Initial Prompt: {user_prompt}")
        print("To improve your prompt, consider the following questions:")
        for question in self.follow_up_questions:
            print(f"- {question}")

# Example usage
if __name__ == "__main__":
    user_input = input("Enter your prompt: ")
    generator = BetterPromptGenerator()
    generator.generate_follow_ups(user_input)
